{
  "$keywords": {
    "state": {
      "propertyParameters": {
        "value": {
          "type": "string",
          "enum": [
            "Activating",
            "Active",
            "Deleting",
            "Deleted",
            "ActivationFailed",
            "DeletionFailed",
            "Transitioning",
            "Suspending",
            "Suspended",
            "Resuming",
            "FailingOver",
            "FailoverFailed"
          ]
        }
      }
    },
    "provisioningState": {
      "propertyParameters": {
        "value": {
          "type": "string"
        }
      }
    },
    "iotHubs": {
      "body": {
        "applyAllocationPolicy": {
          "$ref": "#/$keywords/applyAllocationPolicy"
        },
        "allocationWeight": {
          "$ref": "#/$keywords/allocationWeight"
        },
        "connectionString": {
          "$ref": "#/$keywords/connectionString"
        },
        "location": {
          "$ref": "#/$keywords/location"
        }
      },
      "array": true
    },
    "applyAllocationPolicy": {
      "propertyParameters": {
        "value": {
          "type": "bool",
          "default": false
        }
      }
    },
    "allocationWeight": {
      "propertyParameters": {
        "value": {
          "type": "int",
          "default": 0
        }
      }
    },
    "connectionString": {
      "propertyParameters": {
        "value": {
          "type": "string"
        }
      }
    },
    "location": {
      "propertyParameters": {
        "value": {
          "type": "string"
        }
      }
    },
    "allocationPolicy": {
      "propertyParameters": {
        "value": {
          "type": "string",
          "enum": [
            "Hashed",
            "GeoLatency",
            "Static"
          ]
        }
      }
    },
    "authorizationPolicies": {
      "body": {
        "keyName": {
          "$ref": "#/$keywords/keyName"
        },
        "primaryKey": {
          "$ref": "#/$keywords/primaryKey"
        },
        "secondaryKey": {
          "$ref": "#/$keywords/secondaryKey"
        },
        "rights": {
          "$ref": "#/$keywords/rights"
        }
      },
      "array": true
    },
    "keyName": {
      "propertyParameters": {
        "value": {
          "type": "string"
        }
      }
    },
    "primaryKey": {
      "propertyParameters": {
        "value": {
          "type": "string"
        }
      }
    },
    "secondaryKey": {
      "propertyParameters": {
        "value": {
          "type": "string"
        }
      }
    },
    "rights": {
      "propertyParameters": {
        "value": {
          "type": "string",
          "enum": [
            "ServiceConfig",
            "EnrollmentRead",
            "EnrollmentWrite",
            "DeviceConnect",
            "RegistrationStatusRead",
            "RegistrationStatusWrite"
          ]
        }
      }
    }
  },
  "$resources": {
    "provisioningServices": {
      "state": {
        "$ref": "#/$keywords/state"
      },
      "provisioningState": {
        "$ref": "#/$keywords/provisioningState"
      },
      "iotHubs": {
        "$ref": "#/$keywords/iotHubs"
      },
      "allocationPolicy": {
        "$ref": "#/$keywords/allocationPolicy"
      },
      "authorizationPolicies": {
        "$ref": "#/$keywords/authorizationPolicies"
      }
    },
    "provisioningServices/certificates": {}
  }
}
