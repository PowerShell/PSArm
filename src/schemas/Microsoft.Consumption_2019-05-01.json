        }
      }
    },
    "startDate": {
      "propertyParameters": {
        "value": {
          "type": "string"
        }
      }
    },
    "endDate": {
      "propertyParameters": {
        "value": {
          "type": "string"
        }
      }
    },
    "filters": {
      "body": {
        "resourceGroups": {
          "$ref": "#/$keywords/resourceGroups"
        },
        "resources": {
          "$ref": "#/$keywords/resources"
        },
        "meters": {
          "$ref": "#/$keywords/meters"
        },
        "tags": {
          "$ref": "#/$keywords/tags"
        }
      }
    },
    "resourceGroups": {
      "propertyParameters": {
        "value": {
          "type": "string"
        }
